
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
    <p>
      <%= form.text_field :name, class:"form-control", placeholder:"Name..." %>
    </p>
    <p>
      <%= form.text_area :content, class:"form-control", placeholder:"Content..." %>
    </p>
    <p>
      <%= form.submit class:"btn btn-primary"%>
    </p>
<% end %>
